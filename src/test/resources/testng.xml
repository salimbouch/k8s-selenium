<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Grid Suite" parallel="tests" thread-count="3">
    <test name="Chrome Tests" parallel="methods" thread-count="4">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.example.demo.DemoApplicationTest"/>
        </classes>
    </test>
    <test name="Firefox Tests" parallel="methods" thread-count="4">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.example.demo.DemoApplicationTest"/>
        </classes>
    </test>
    <test name="Edge Tests" parallel="methods" thread-count="4">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.example.demo.DemoApplicationTest"/>
        </classes>
    </test>
</suite>